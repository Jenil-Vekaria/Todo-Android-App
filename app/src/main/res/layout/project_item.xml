<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/projectCard"
    android:layout_width="@dimen/cardWidth"
    android:layout_height="@dimen/cardHeight"
    android:layout_marginTop="16dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/round_button"
    app:cardBackgroundColor="@color/pinkGlamour"
    app:cardCornerRadius="10dp"
    card_view:cardElevation="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp">


        <TextView
            android:id="@+id/projectName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/nunito"
            android:text="CPS847 Final Project"
            android:textColor="#ffff"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/totalTasks"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:fontFamily="@font/nunito"
            android:text="10 Tasks"
            android:textColor="#ffff"
            android:textSize="16sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>